<p>
<strong>Title:</strong>
<%= @article.title %>
</p>

<p>
<strong>Text:</strong>
<%= @article.text %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>

<h2> Add a Comment </h2>
<%= form_for ([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text :commenter %>
  <p>

  <p>
    <%= f.label :comment %>
    <%= f.text :comment %>
  <p>

  <p>
    <%= f.submit %>
  <p>

<%end%>
