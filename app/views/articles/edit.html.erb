<h1> Editing Articles </h1>

<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
		

  <p>
  	<%= f.label :title %> <br>
  	<%= f.text_field :title %>
  </p>	

  <p>
  	<%= f.label :text %> <br>
  	<%= f.text_field :text %>
  </p>	
  <p>
     <%= f.submit %> 
  </p>	
<% end %>
  